@model MatchViewModel;

@{
    ViewData["Title"] = "Match Details";
}

<body style="background-image: url('https://i.ibb.co/yVx3JtY/white-painted-wall-texture-background-1.jpg')">
    <div class="container-fluid pt-3">
        <div class="row justify-content-sm-center lead text-justify" style="font-family: Georgia, 'Times New Roman', Times, serif; font-size: large;">
            <div class="col-sm-6">
                <div class="card bg-transparent" style="border: none; border-radius: 5%;">
                    <div class="row justify-content-sm-center form-group">
                        <div class="offset-2 col-sm-4">
                            <h3 class="text-center pt-5">Match Details</h3>
                        </div>
                    </div>
                    <div class="card-body pt-5">
                        <div class="row">
                            <label class="col-sm-2 col-form-label">Players:</label>
                            <div class="col-sm-4">
                                <input style="background-color: #27B42A;" class="form-control text-center" value="@Model.Players.First(p => p.Name == Model.Winner).Name" disabled />
                            </div>
                            <label class="col-sm-2 col-form-label text-center">VS</label>
                            <div class="col-sm-4">
                                <input style="background-color: #D72F2F;" class="form-control text-center" value="@Model.Players.First(p => p.Name != Model.Winner).Name" disabled />
                            </div>
                        </div>
                        <div class="row pt-2">
                            <label class="col-sm-2 col-form-label">Score:</label>
                            <div class="col-sm-4">
                                <input class="form-control text-center" value="@Model.WinnerSets Sets" disabled />
                            </div>
                            <label class="col-sm-2 col-form-label text-center">-</label>
                            <div class="col-sm-4">
                                <input class="form-control text-center" value="@Model.LoserSets Sets" disabled />
                            </div>
                        </div>
                        <div class="row pt-2">
                            <label class="col-sm-2 col-form-label">Duration:</label>
                            <div class="col-sm-10">
                                <input class="form-control text-center" value="@Model.Duration Minutes" disabled />
                            </div>
                        </div>
                        <div class="row pt-2">
                            <label class="col-sm-2 col-form-label">Location:</label>
                            <div class="col-sm-10">
                                <input class="form-control text-center" value="@Model.Location" disabled />
                            </div>
                        </div>
                        <div class="row pt-2">
                            <label class="col-sm-2 col-form-label">Date:</label>
                            <div class="col-sm-10">
                                <input class="form-control text-center" value="@Model.Date.ToLongDateString()" disabled />
                            </div>
                        </div>
                        <div class="row pt-2">
                            <label class="col-sm-2 col-form-label">Winner:</label>
                            <div class="col-sm-10">
                                <input style="background-color: #27B42A;" class="form-control text-center" value="@Model.Winner" disabled />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
